function HappyBdayArcheel(){

	$wish = '';

	for ($i = 0; $i < 4; $i++) {
 
    		$wish.= "Happy birthday ";
 
    		if ($i != 2) {
        		$wish.= "to you!\n";
 
    		} else {
        		$wish.= "dear Archeel !!\n";
   	        }
	}
	echo "$wish";
	echo"<br>";
}
